<% include header.ejs %>
    <div class="container-fluid">
      <!-- Breadcrumbs-->
      <ol class="breadcrumb">
        <li class="breadcrumb-item">
          <a href="/admin/dashboard">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Books List</li>
      </ol>
      <!-- Example DataTables Card-->
      <div class="card mb-3">
        <div class="card-header">
          <i class="fa fa-table"></i> Data Table Example</div>
        <div class="card-body">
          <% if (messages.success) { %>
            <p style="color:green"><%- messages.success %></p>
        <% } %>
        <% if (messages.error) { %>
          <p style="color:rgb(128, 0, 6)"><%- messages.error %></p>
      <% } %>
          <div class="table-responsive">
              <a href="/admin/books" class="pull-right btn btn-info btn-xs">Add Bookt</a>
              <br/><br/>
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
              <thead>
                <tr>
                  <th>Category</th>
                  <th>Title</th>
                  <th>Author</th>
                  <th>ISBN</th>
                  <th>Publisher</th>
                  <th>Books Quantity</th>
                  <th>Edition</th>
                  <th>Cover</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% for(var val of bookList){
                  %>
                  <tr>
                      <td><%= val.category%></td>
                      <td><%= val.title%></td>
                      <td><%= val.author%></td>
                      <td><%= val.isbn%></td>
                      <td><%= val.publisher%></td>
                      <td><%= val.booknum%></td>
                      <td><%= val.edition%></td>
                      <td><img style="width:200px; height:200px;" src="/upload/<%=  val.cover %>"/></td>
                      <td><a href="" class="btn btn-xs btn-info">Update</a> <a href="" class="btn btn-xs btn-danger">Delete</a></td>
                    </tr>
                  <%
                } 
                %>              
              </tbody>
            </table>
          </div>
        </div>
        <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
      </div>
    </div>
    <div class="modal fade" id="exampleModal1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Add Category</h5>
              <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">Ã—</span>
              </button>
            </div>
            <div class="modal-body">
              <div class="form-group">
                <input type="text" id="cat" name="cat" class="form-control" />
              </div>
              <button type="button" id="addCat" class="btn btn-primary">Add</button>
            </div>
            <div class="modal-footer">
              <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
            </div>
          </div>
        </div>
      </div>
    <!-- /.container-fluid-->
    <% include footer.ejs %>